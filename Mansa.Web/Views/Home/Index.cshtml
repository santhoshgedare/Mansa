<section class="page-section bg-light py-5" id="contact">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center text-center">
            <div class="col-lg-8 col-xl-6">
                <h2 class="mt-0 fw-bold text-primary">Let's Get In Touch!</h2>
                <hr class="divider my-4" />
                <p class="text-muted mb-4 fs-5">
                    Ready to start your next project with us? Send us a message and we’ll get back to you as soon as possible!
                </p>
            </div>
        </div>
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <!-- Contact Form Column -->
            <div class="col-lg-6 mb-5 mb-lg-0">
                <form>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" type="text" placeholder="Enter your name..." required />
                        <label for="name">Full Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="email" type="email" placeholder="Enter your email..." required />
                        <label for="email">Email Address</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="phoneNumber" type="text" placeholder="Subject" required />
                        <label for="subject">Phone Number</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="subject" type="text" placeholder="Subject" required />
                        <label for="subject">Subject</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="message" placeholder="Enter your message here..." style="height: 10rem" required></textarea>
                        <label for="message">Message</label>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary btn-xl" type="submit">Send Message</button>
                    </div>
                </form>
            </div>

             
        </div>
    </div>
</section>
